{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "esModuleInterop": true,
      "target": "es2015"
    },
    "moduleResolution": "node",
    "include": [
      "src/**/*.ts",
      "node_modules/@types/puppeteer/index.d.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }
  